<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header">

        <ListPreference
            app:defaultValue="feet"
            app:key="unit"
            app:entries="@array/unit_entries"
            app:entryValues="@array/unit_values"
            app:title="@string/units_header"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            app:key="radius"
            app:title="Danger Radius"
            app:showSeekBarValue="true"
            app:defaultValue="10"/>

        <SwitchPreference
            app:defaultValue="true"
            app:key="locationSwitch"
            app:summary="Location is turned on"
            app:title="Location" />

        <SwitchPreference
            app:defaultValue="true"
            app:key="notificationSwitch"
            app:summary="Notifications are turned on"
            app:title="Notifications" />

        <ListPreference
            app:key="bookmarks"
            app:summary="Your set bookmarks"
            app:title="Bookmarked routes" />


    </PreferenceCategory>


</PreferenceScreen>